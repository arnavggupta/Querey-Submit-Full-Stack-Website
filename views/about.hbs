{{>services}}
     <script>
        // JavaScript to handle "Read More" functionality
        const readMoreBtn = document.getElementById("read-more-btn");
        const content = document.querySelector(".overflow");

        readMoreBtn.addEventListener("click", function () {
            if (content.style.maxHeight === "100px") {
                content.style.maxHeight = "none"; // Display all content
                readMoreBtn.textContent = "Read Less";
            } else {
                content.style.maxHeight = "100px"; // Show only a portion of content
                readMoreBtn.textContent = "Read More";
            }
        });
    </script>

